<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>PackItPro.ico</ApplicationIcon>
		<Version>0.3.0</Version>
		<Authors>PackItPro Team</Authors>
		<Description>Secure file packaging</Description>
		<Nullable>enable</Nullable>
		<PublishSingleFile>true</PublishSingleFile>
		<SelfContained>true</SelfContained>
		<UseWindowsForms>true</UseWindowsForms>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.5" />
		<PackageReference Include="SharpZipLib" Version="1.4.2" />
		<PackageReference Include="System.IO.Compression.ZipFile" Version="4.3.0" />
		<PackageReference Include="System.Net.Http.Json" Version="8.0.1" />
		<PackageReference Include="System.Text.Json" Version="8.0.5" />
		<PackageReference Include="PeNet" Version="5.1.0" />
	</ItemGroup>

	<ItemGroup>
		<None Update="PackItPro.ico">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<!-- Copy StubInstaller.exe from its output directory to PackItPro's output directory after building PackItPro -->
		<Content Include="..\StubInstaller\bin\$(Configuration)\net8.0-windows\StubInstaller.exe" Link="StubInstaller.exe">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Models\" />
	  <Folder Include="Services\" />
	  <Folder Include="Themes\" />
	  <Folder Include="Views\" />
	  <Folder Include="ViewModels\" />
	</ItemGroup>

	<!-- Optional: Explicit Build Dependency (usually inferred from ProjectReference) -->
	<!-- <ItemGroup>
		<ProjectReference Include="..\StubInstaller\StubInstaller.csproj" />
	</ItemGroup> -->

	<Target Name="CopyStubInstaller" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug' Or '$(Configuration)' == 'Release'">
		<Copy SourceFiles="..\StubInstaller\bin\$(Configuration)\net8.0-windows\StubInstaller.exe" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" />
	</Target>

</Project>