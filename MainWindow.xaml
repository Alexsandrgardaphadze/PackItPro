<Window x:Class="PackItPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackItPro"
        mc:Ignorable="d"
        Title="PackItPro" Height="606" Width="1000"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="800" MinHeight="500">

    <Window.Resources>
        <!-- Tool Tip Style -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#353545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4F4F6A"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <!-- Windows 11 Style Button -->
        <Style x:Key="Win11Button" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1084D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006CC1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#505069"/>
                                <Setter Property="Foreground" Value="#909090"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- File Item Style -->
        <Style x:Key="FileItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#2C2C3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="1"/>
                                <Button Grid.Column="2" Content="✕" 
                                        Foreground="#CCCCCC"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Padding="5,0"
                                        Click="RemoveFile_Click"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353545"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3A3A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Menu Item Style -->
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter ContentSource="Header" Margin="10,3"/>
                                <Popup x:Name="Popup" IsOpen="{TemplateBinding IsSubmenuOpen}" 
                                       Placement="Bottom" PopupAnimation="Fade">
                                    <Border x:Name="SubMenuBorder" Background="#252536" 
                                            BorderBrush="#3F3F5A" BorderThickness="1" Padding="2">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353545" TargetName="Border"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#353545" TargetName="Border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Submenu Item Style -->
        <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="5,3">
                            <ContentPresenter ContentSource="Header" Margin="10,3"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353545" TargetName="Border"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#353545" TargetName="Border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style for GridViewColumn -->
        <Style x:Key="GridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#2C2C3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu Bar -->
            <RowDefinition Height="*"/>
            <!-- Main Content Area -->
            <RowDefinition Height="Auto"/>
            <!-- Status Area -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#1E1E2F" Padding="0,5">
            <MenuItem Header="File" Foreground="White" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Clear All Files" Click="ClearAllFiles_Click" Style="{StaticResource SubMenuItemStyle}"/>
                <Separator Background="#3F3F5A"/>
                <MenuItem Header="Exit" Click="Exit_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="Settings" Foreground="White" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="Output Location..." Click="SetOutputLocation_Click" Style="{StaticResource SubMenuItemStyle}"/>
                <MenuItem Header="VirusTotal API Key..." Click="SetVirusApiKey_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="Help" Foreground="White" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="About" Click="About_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- File List Area -->
            <Border Grid.Column="0" Margin="0,0,10,0" BorderBrush="#3F3F5A" 
                    BorderThickness="1" CornerRadius="8"
                    Background="#252536"
                    x:Name="DropAreaBorder"
                    AllowDrop="True" 
                    Drop="DropArea_Drop"
                    DragEnter="DropArea_DragEnter"
                    DragLeave="DropArea_DragLeave">

                <Grid>
                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyDropState" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="Visible">
                        <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Foreground="#6F6F8A"/>
                        <TextBlock Text="Drag &amp; Drop Files Here" 
                                   FontSize="18" 
                                   Foreground="#CCCCCC" 
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="or click to browse" 
                                   FontSize="14" 
                                   Foreground="#9F9FAF" 
                                   HorizontalAlignment="Center"/>
                        <Button Content="Browse Files" 
                                Style="{StaticResource Win11Button}"
                                Click="BrowseFiles_Click"
                                Margin="0,15,0,0"/>
                        <TextBlock Text="(Maximum 20 files)" 
                                   FontSize="12" 
                                   Foreground="#7F7F8F" 
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- File List -->
                    <ListView x:Name="FileListView" 
                              Background="Transparent" 
                              BorderThickness="0"
                              Margin="10"
                              Visibility="Collapsed"
                              ItemContainerStyle="{StaticResource FileItemStyle}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="File Name" Width="200" HeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FileName, Mode=OneWay}" Foreground="White" FontFamily="Consolas"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Size" Width="100" HeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Size, Mode=OneWay}" Foreground="White" FontFamily="Consolas"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Status" Width="120" HeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status, Mode=OneWay}" Foreground="{Binding StatusColor, Mode=OneWay}" FontFamily="Consolas"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <!-- Configuration & Pack Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Pack Settings -->
                <Border Grid.Row="0" Background="#252536" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Pack Settings" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <TextBlock Text="Output File Name:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBox x:Name="OutputFileNameTextBox" 
                                 Background="#1E1E2F" 
                                 Foreground="White" 
                                 BorderBrush="#3F3F5A"
                                 Padding="8,5" 
                                 Margin="0,0,0,15"
                                 FontFamily="Consolas"/>

                        <TextBlock Text="Output Format:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <ComboBox x:Name="OutputFormatComboBox" 
                                  Background="#1E1E2F" 
                                  Foreground="White"
                                  Padding="8,5"
                                  FontFamily="Consolas"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content=".pipack" IsSelected="True">
                                <ComboBoxItem.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="Standard secure archive format for bundling multiple files" 
                                                   TextWrapping="Wrap" 
                                                   MaxWidth="250"/>
                                    </ToolTip>
                                </ComboBoxItem.ToolTip>
                            </ComboBoxItem>
                            <ComboBoxItem Content=".safeexe">
                                <ComboBoxItem.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="Executable installer format that unpacks files automatically" 
                                                   TextWrapping="Wrap" 
                                                   MaxWidth="250"/>
                                    </ToolTip>
                                </ComboBoxItem.ToolTip>
                            </ComboBoxItem>
                        </ComboBox>

                        <CheckBox x:Name="ScanWithVirusTotalCheckBox" 
                                  Content="Scan with VirusTotal" 
                                  Foreground="#CCCCCC"
                                  IsChecked="True"
                                  Margin="0,0,0,5">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="Files will be checked against VirusTotal's database to ensure they're safe" 
                                               TextWrapping="Wrap" 
                                               MaxWidth="250"/>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>

                        <CheckBox x:Name="CreateAutoInstallerCheckBox" 
                                  Content="Create auto-installer" 
                                  Foreground="#CCCCCC"
                                  IsChecked="True"
                                  Margin="0,0,0,5">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="Creates a .safeexe file that can automatically install the packed files" 
                                               TextWrapping="Wrap" 
                                               MaxWidth="250"/>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- File Statistics -->
                <Border Grid.Row="1" Background="#252536" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Summary" FontSize="16" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <StackPanel Grid.Row="1">
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Files:" Foreground="#9F9FAF"/>
                                <TextBlock Grid.Column="1" x:Name="FileCountTextBlock" Text="0" Foreground="White" HorizontalAlignment="Right" FontFamily="Consolas"/>
                            </Grid>

                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total Size:" Foreground="#9F9FAF"/>
                                <TextBlock Grid.Column="1" x:Name="TotalSizeTextBlock" Text="0 KB" Foreground="White" HorizontalAlignment="Right" FontFamily="Consolas"/>
                            </Grid>

                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Status:" Foreground="#9F9FAF"/>
                                <TextBlock Grid.Column="1" x:Name="StatusTextBlock" Text="Ready" Foreground="#00C176" HorizontalAlignment="Right" FontFamily="Consolas"/>
                            </Grid>

                            <TextBlock Text="About .pipack files:" Foreground="#9F9FAF" Margin="0,15,0,5" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Foreground="#CCCCCC" LineHeight="20" FontSize="12">
                                PackItPro creates a secure archive to bundle multiple files and folders with optional VirusTotal scanning. The .pipack format enables safe distribution and easy installation of software bundles.
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pack Button -->
                <Border Grid.Row="2" Background="#252536" CornerRadius="8" Padding="15">
                    <Button x:Name="PackButton" 
                            Content="Pack Now" 
                            Style="{StaticResource Win11Button}"
                            Height="40"
                            FontSize="16"
                            Click="PackNow_Click"
                            IsEnabled="False"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Message Area -->
        <Border Grid.Row="2" 
                Background="#252536" 
                CornerRadius="4" 
                Padding="10,8"
                Margin="0,0,0,10">
            <Grid>
                <TextBlock x:Name="StatusMessageTextBlock" 
                       Text="Ready to pack files. Add files to continue." 
                       Foreground="#CCCCCC"
                       FontFamily="Consolas"/>
                <ProgressBar x:Name="ProcessingProgressBar"
                         Height="3"
                         Minimum="0" 
                         Maximum="100" 
                         Value="0"
                         Foreground="#0078D7"
                         Background="Transparent"
                         VerticalAlignment="Bottom"
                         Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ProgressBar Grid.Column="0" 
                         x:Name="ProcessProgressBar"
                         Height="5"
                         Minimum="0" 
                         Maximum="100" 
                         Value="0"
                         Foreground="#0078D7"
                         Background="#3A3A4D"/>

            <TextBlock Grid.Column="1" 
                       x:Name="ProgressPercentTextBlock" 
                       Text="0%" 
                       Foreground="#CCCCCC"
                       Margin="8,0,0,0"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>