<Application x:Class="PackItPro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Colors.xaml" />
                <ResourceDictionary Source="/Themes/Converters.xaml" />
                <ResourceDictionary Source="/Themes/Controls.xaml" />
                <ResourceDictionary Source="/Themes/Styles.xaml" />
                <!-- Optional fallback (put it last) -->
                <ResourceDictionary Source="/Themes/FallbackResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Do NOT define converters again here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>